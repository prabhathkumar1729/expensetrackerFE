@page "/"
@*
<MudAppBar Color="Color.Primary" Elevation="4">
    <MudContainer>
        <MudToolbar>
            <div class="flex-grow-1">
                <MudText Typo="Typo.h6" Class="white--text">
                    Wallet Tracker
                </MudText>
            </div>
            <div>
                <MudButton Href="/dashboard" Color="Color.Secondary">
                    Get Started
                </MudButton>
            </div>
        </MudToolbar>
    </MudContainer>
</MudAppBar>

<MudContainer Class="mud-theme-primary">
    <MudContainer>
        <div class="text-center">
            <MudText Typo="Typo.h1" Class="white--text mb-4">
                Track Your Expenses
            </MudText>
            <MudText Typo="Typo.h5" Class="white--text">
                Easily manage your finances and stay on top of your expenses.
            </MudText>
        </div>
    </MudContainer>
</MudContainer>

<MudContainer>
    <div class="my-6">
        <MudGrid Container Spacing="4">
            <MudGrid ColSpan="6">
                <div class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.ShowChart" Size="Size.Large" Class="primary--text"></MudIcon>
                    <MudTypography Typo="Typo.h4" Class="my-3">
                        Visualize Your Spending
                    </MudTypography>
                    <MudTypography Typo="Typo.subtitle1">
                        Gain insights into your expenses with interactive charts and graphs.
                    </MudTypography>
                </div>
            </MudGrid>
            <MudGrid ColSpan="6">
                <div class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Description" Size="Size.Large" Class="primary--text"></MudIcon>
                    <MudText Typo="Typo.h4" Class="my-3">
                        Categorize Your Transactions
                    </MudText>
                    <MudText Typo="Typo.subtitle1">
                        Assign categories to your transactions for better organization and analysis.
                    </MudText>
                </div>
            </MudGrid>
            <MudGrid ColSpan="6">
                <div class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Edit" Size="Size.Large" Class="primary--text"></MudIcon>
                    <MudText Typo="Typo.h4" Class="my-3">
                        Easy Transaction Management
                    </MudText>
                    <MudText Typo="Typo.subtitle1">
                        Add, edit, and delete transactions with a simple and intuitive interface.
                    </MudText>
                </div>
            </MudGrid>
            <MudGrid ColSpan="6">
                <div class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Share" Size="Size.Large" Class="primary--text"></MudIcon>
                    <MudTypography Typo="Typo.h4" Class="my-3">
                        Collaborate and Share
                    </MudTypography>
                    <MudTypography Typo="Typo.subtitle1">
                        Collaborate with others and share expense reports effortlessly.
                    </MudTypography>
                </div>
            </MudGrid>
        </MudGrid>
    </div>
</MudContainer>

<MudContainer>
    <div class="text-center">
        <MudTypography Typo="Typo.h3" Class="my-6">
            Get Started Today
        </MudTypography>
        <MudButton Href="/dashboard" Color="Color.Primary" Size="Size.Large">
            Start Tracking
        </MudButton>
    </div>
</MudContainer>
*@

